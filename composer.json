{
    "name": "spatie/github-actions-watcher",
    "description": "A CLI tool to see the status of all your GitHub Actions workflows in real time",
    "keywords": [
        "spatie",
        "github-actions-watcher"
    ],
    "homepage": "https://github.com/spatie/github-actions-watcher",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.4",
        "illuminate/http": "^8.74",
        "illuminate/view": "^8.74",
        "laravel-zero/framework": "^8.9.1",
        "myclabs/php-enum": "^1.8",
        "nunomaduro/larastan": "^1.0.2",
        "nunomaduro/termwind": "^1.0",
        "spatie/valuestore": "^1.3.1",
        "symfony/process": "^5.4|^6.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.4.4",
        "pestphp/pest": "^1.21",
        "spatie/ray": "^1.32"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        },
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["actions-watcher"]
}
